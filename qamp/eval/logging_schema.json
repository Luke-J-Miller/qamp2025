{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "qamp_run_record",
  "type": "object",
  "properties": {
    "run_id": { "type": "string" },
    "timestamp": { "type": "string" },
    "commit": { "type": "string" },
    "seed": { "type": "integer" },
    "dataset": { "type": "string" },
    "task": { "type": "string", "enum": ["subgraph_detection", "localization", "similarity"] },
    "n_target": { "type": "integer" },
    "n_pattern": { "type": "integer" },
    "density": { "type": "number" },
    "method": { "type": "string" },
    "config": { "type": "object" },
    "backend": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "name": { "type": "string" },
        "transpile_opt_level": { "type": "integer" },
        "shots": { "type": "integer" },
        "queue_time_s": { "type": "number" },
        "exec_time_s": { "type": "number" }
      },
      "additionalProperties": true
    },
    "resources": {
      "type": "object",
      "properties": {
        "qubits": { "type": "integer" },
        "depth": { "type": "integer" },
        "gates_1q": { "type": "integer" },
        "gates_2q": { "type": "integer" },
        "transpile_time_s": { "type": "number" },
        "preprocess_time_s": { "type": "number" },
        "host_peak_mem_mb": { "type": "number" }
      },
      "additionalProperties": true
    },
    "noise": {
      "type": "object",
      "properties": {
        "t1_us": { "type": ["number","null"] },
        "t2_us": { "type": ["number","null"] },
        "depolarizing_p": { "type": ["number","null"] },
        "mitigation": { "type": ["string","null"] }
      },
      "additionalProperties": true
    },
    "metrics": {
      "type": "object",
      "properties": {
        "accuracy": { "type": ["number","null"] },
        "f1": { "type": ["number","null"] },
        "auroc": { "type": ["number","null"] },
        "localization_top1": { "type": ["number","null"] },
        "localization_top3": { "type": ["number","null"] },
        "time_to_answer_s": { "type": ["number","null"] }
      },
      "additionalProperties": true
    }
  },
  "required": ["run_id", "timestamp", "commit", "seed", "dataset", "task", "method", "config"],
  "additionalProperties": true
}
